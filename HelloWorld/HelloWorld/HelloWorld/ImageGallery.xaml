<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.ImageGallery">
    <AbsoluteLayout BackgroundColor="Black">
        <Button Text="Previous" TextColor="White" AbsoluteLayout.LayoutBounds="0.05,0.05,100,50" AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <ActivityIndicator IsRunning="True" Color="White" AbsoluteLayout.LayoutBounds="0.5,0.05,50,50" AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Button Text="Next" TextColor="White" AbsoluteLayout.LayoutBounds="0.95,0.05,100,50" AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Image Source="http://lorempixel.com/1920/1080/city/1" AbsoluteLayout.LayoutBounds="0,0.25,1,1" AbsoluteLayout.LayoutFlags="All"/>
    </AbsoluteLayout>
</ContentPage>